{
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ]
}
